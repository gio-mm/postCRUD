<table class="table">
  <thead class="thead-dark">
  <tr>
    <th scope="col">#</th>
    <th scope="col">title</th>
    <th scope="col">created_at</th>
    <th scope="col">show post</th>
    <th scope="col">edit</th>
    <th scope="col">delete</th>

  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <th scope="row"><%= post.id %></th>
      <td> <%= post.title %></td>
      <td> <%= post.created_at.strftime("%m/%d/%Y %H:%M:%S") %></td>
      <td> <%= link_to 'show more', post_path(post) , class:"text-success"  %></td>
      <td>  <%= link_to 'edit', edit_post_path(post) , class:" text-secondary"  %></td>
      <td>  <%= link_to 'delete', post_path(post),method: :delete , class:"text-secondary"  %></td>
    </tr>
    <tr>
  <%end %>
  </tbody>
</table>